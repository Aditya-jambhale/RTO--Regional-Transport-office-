      text-decoration: underline;
    }

    #gallery {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      width: 100%;
      background-color: rgb(171, 180, 180);
      height: 50%;

    }

    .gallery-heading {
      letter-spacing: 1px;


      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .gallery-heading h1 {
      font-size: 2.2rem;
      font-weight: 500;
      background-color: hsl(63, 92%, 75%);
      color: rgb(12, 2, 2);
      padding: 10px 20px;
      font-family: 'Trebuchet MS';
      border-radius: 30rem;
      border-style: ridge;
      border-width: 4PX;
    }

    .gallery-heading span {
      font-size: 17PX;
      color: #161616;
      margin-bottom: 10px;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-variant: small-caps;
      font-family: 'Times New Roman';
      text-align: center;
    }

    .gallery .gallery-container {
      display: flex;
      flex-wrap: wrap;
      gap: 7.5rem;
      background-color: solid;

    }


    .gallery .gallery-container .gallery {
      overflow: hidden;
      box-shadow: 0 1rem 2rem rgba(0, 0, 0, .1);
      border: 1rem solid rgb(249, 244, 244);
      border-radius: 2rem;
      flex: 1 1 25rem;
      height: 25rem;
      position: relative;
      text-align: center;
      font-size: 23px;
    }

    .gallery .gallery-container .gallery img {
      height: 100%;
      width: 100%;
      object-fit: fill
    }

    .gallery .gallery-container .gallery .content {
      position: absolute;
      top: -100%;
      left: 0;
      height: 100%;
      width: 100%;
      background: rgba(0, 0, 0, .7);
      padding: 2rem;
      padding-left: 3rem;
      font-size: 15px;
      text-align: left;
    }

    .gallery .gallery-container .gallery:hover .content {
      top: 0;
    }

    .gallery .gallery-container .gallery .content h3 {
      font-size: 1.5rem;
      color: var(--orange);

    }

    .gallery .gallery-container .gallery .content p {
      font-size: 1.5rem;
      color: #eee;
      padding: 5rem 0;

    }

    * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Poppins", sans-serif;
    }

    a {
